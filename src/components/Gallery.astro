<style>
  #gallery {
    overflow: hidden;
    padding: 2rem 0;
    margin-left: -1rem;
    margin-right: -1rem;
  }

  .gallery-images {
    display: flex;
    gap: 1rem;
    width: max-content;
    animation: gallery-scroll 30s linear infinite;
  }

  .gallery-images img {
    height: 10rem;
    width: auto;
    flex-shrink: 0;
  }

  @keyframes gallery-scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
</style>

<section id="gallery">
  <div class="gallery-images">
    {scrollingImages.map(({ src, alt }) => (
      <img src={src} alt={alt} />
    ))}
  </div>
</section>
