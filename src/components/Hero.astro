---
import Logo from '../images/Logo.svg';
---
<style>
  #hero {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-logo {
    margin-top: 5rem;
  }

  .hero-logo .logo {
    width: clamp(150px, 50vw, 300px);
    height: auto;
  }
</style>

<section id="hero">
    <div class="hero-logo">
        <Logo class="logo" />
    </div>
</section>
