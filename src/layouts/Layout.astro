---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Paul Diermair Waldbewirtschaftung</title>

    <!-- SEO Meta Tags -->
    <meta
      name="description"
      content="Professionelle Forstwirtschaft und Waldpflege in Oberösterreich. Nachhaltige Bewirtschaftung und persönliche Beratung."
    />
    <meta name="keywords" content="Forstwirtschaft, Waldpflege, Aufforstung, Beratung" />
    <meta name="author" content="Paul Diermair" />
  </head>
  <body class="font-sans text-green-900 bg-white">
    <header class="bg-green-800 text-white">
      <div class="max-w-5xl mx-auto flex justify-between items-center p-4">
        <p class="font-semibold">Paul Diermair Waldbewirtschaftung</p>
        <nav class="space-x-4">
          <a href="#leistungen" class="hover:underline">Leistungen</a>
          <a href="#kontakt" class="hover:underline">Kontakt</a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-green-800 text-white text-center text-sm py-4">
      &copy; {new Date().getFullYear()} Paul Diermair Waldbewirtschaftung
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
