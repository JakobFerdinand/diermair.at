---
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Forstbewirtschaftung Diermair</title>
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Professionelle Forstbewirtschaftung und Waldpflege in Österreich. Nachhaltige Forstwirtschaft, Holzernte und Waldmanagement von Experten." />
		<meta name="keywords" content="Forstwirtschaft, Waldpflege, Forstbewirtschaftung, Holzernte, nachhaltiger Wald, Österreich, Waldmanagement" />
		<meta name="author" content="Forstbewirtschaftung Diermair" />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={`${title} | Forstbewirtschaftung Diermair`} />
		<meta property="og:description" content="Professionelle Forstbewirtschaftung und Waldpflege in Österreich. Nachhaltige Forstwirtschaft, Holzernte und Waldmanagement von Experten." />
		<meta property="og:site_name" content="Forstbewirtschaftung Diermair" />
		
		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "LocalBusiness",
				"name": "Forstbewirtschaftung Diermair",
				"description": "Professionelle Forstbewirtschaftung und Waldpflege in Österreich",
				"image": "/favicon.svg",
				"address": {
					"@type": "PostalAddress",
					"addressCountry": "AT",
					"addressRegion": "Oberösterreich"
				},
				"areaServed": "Oberösterreich",
				"serviceType": ["Forstbewirtschaftung", "Waldpflege", "Holzernte"],
				"priceRange": "€€"
			}
		</script>
	</head>
       <body>
		
               <slot />
               <Footer class="mt-auto" />
       </body>
</html>

<style>
:root {
  --green-color: #14532d;
  --gray-bg: #e5e7eb;
}

html,
body {
  margin: 0;
  width: 100%;
  height: 100%;
}

body {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  margin: 1rem;
  font-family: sans-serif;
  color: var(--green-color);
  background-color: var(--gray-bg);
  fill: var(--green-color);
  transition: background-color 0.3s, color 0.3s;
}

.mt-auto {
  margin-top: auto;
}

.center-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}
</style>

