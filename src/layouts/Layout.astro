---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Forstbewirtschaftung Diermair</title>
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Professionelle Forstbewirtschaftung und Waldpflege in Österreich. Nachhaltige Forstwirtschaft, Holzernte und Waldmanagement von Experten." />
		<meta name="keywords" content="Forstwirtschaft, Waldpflege, Forstbewirtschaftung, Holzernte, nachhaltiger Wald, Österreich, Waldmanagement" />
		<meta name="author" content="Forstbewirtschaftung Diermair" />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={`${title} | Forstbewirtschaftung Diermair`} />
		<meta property="og:description" content="Professionelle Forstbewirtschaftung und Waldpflege in Österreich. Nachhaltige Forstwirtschaft, Holzernte und Waldmanagement von Experten." />
		<meta property="og:site_name" content="Forstbewirtschaftung Diermair" />
		
		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "LocalBusiness",
				"name": "Forstbewirtschaftung Diermair",
				"description": "Professionelle Forstbewirtschaftung und Waldpflege in Österreich",
				"image": "/favicon.svg",
				"address": {
					"@type": "PostalAddress",
					"addressCountry": "AT",
					"addressRegion": "Oberösterreich"
				},
				"areaServed": "Oberösterreich",
				"serviceType": ["Forstbewirtschaftung", "Waldpflege", "Holzernte"],
				"priceRange": "€€"
			}
		</script>
	</head>
       <body>
		
               <slot />
               <Footer class="mt-auto" />
       </body>
</html>

